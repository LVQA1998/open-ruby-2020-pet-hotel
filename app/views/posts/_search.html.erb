<%= form_tag  searches_path, method: :get do %>
  <div class="row">
    <div class="col-md-2">
      <div class="form-group">
        <%= text_field_tag :address, params[:address], class: "form-control", placeholder: t("admin.company.address") %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= date_field_tag :start_date_gteq, params[:start_date_gteq] , class: "form-control", placeholder: t("admin.post.start_date") %>
      </div>
    </div>
    <div class="col-md-2">
      <div class="form-group">
        <%= text_field_tag :salary_gteq, params[:salary_gteq], class: "form-control", placeholder: t("admin.post.salary_min") %>
      </div>
    </div>
    <div class="col-md-2 al-r">
      <%= submit_tag(t("admin.reset"), { name: "reset", id: "reset", type: "reset", class: "btn btn-default mt-10"}) %> 
    </div>
    <div class="col-md-2 al-l">
      <%= submit_tag t("admin.search"), type: :submit, class: "search" %>
    </div>
  </div>
<% end %>
