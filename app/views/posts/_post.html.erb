<li class="col-md-6 col-sm-12">
  <div class="listWrpService">
    <div class="row">
      <div class="col-md-3 col-sm-3 col-xs-3">
        <div class="listImg"><%= image_tag post.company_logo %></div>
      </div>
      <div class="col-md-9 col-sm-9 col-xs-9">
        <h3><%= link_to post.title, post_path(post) %></h3>
        <p><%= post.company_name %></p>
        <ul class="featureInfo">
          <li><i class="fas fa-map-marker-alt"></i><%= post.address %></li>
          <li><i class="fas fa-calendar-alt"></i><%= post.apply_time %></li>
        </ul>
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <span class="label label-warning">
              <%= post.target_type_i18n %>
            </span>
            <span class="label label-info"><%= applied_post_status(post) if applied_post_status(post).present? %></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</li>
