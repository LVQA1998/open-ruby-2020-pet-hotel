<div class="inner-content loginWrp listing detail">
  <div class="container">  
    <h2 class="text-center m-5"><%= t "user.change_pw" %></h2>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-8 col-offset-2">
        <%= form_for resource, as: resource_name, url: password_path(resource_name), 
        html: { method: :put } do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <div class="field">
            <%= f.label :password, t("user.reset_pw") %>
            <% if @minimum_password_length %>
              <em>(<%= t "user.minimum_pw", count: @minimum_password_length %>)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control m-2", id: "reset-pw" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation, t("user.reset_pw") %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control m-2" %>
          </div>
          <div class="actions">
            <%= f.submit t("user.change_pw"), class: "btn btn-primary m-2", id: "dmm" %>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

<%= javascript_pack_tag "regex_password" %>
